<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="false"
    android:layout_alignParentBottom="true"
    android:backgroundTint="#FDFCFC"
    android:foregroundTint="#FFFFFF"
    tools:context=".TrainingActivity">

    <TextView
        android:id="@+id/chooseD"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:text="@string/domain"
        android:textColor="@color/Green"
        android:textStyle="bold|italic"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        tools:text="@string/domain"
        tools:visibility="visible" />

    <Button
        android:id="@+id/geography"
        android:layout_width="154sp"
        android:layout_height="76sp"
        android:background="@drawable/shape"
        android:text="@string/geo"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/History"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseD"
        app:layout_constraintVertical_bias="0.644"
        tools:text="@string/geo" />

    <Button
        android:id="@+id/History"
        android:layout_width="154sp"
        android:layout_height="76sp"
        android:background="@drawable/shape"
        android:text="@string/historyT"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/Science"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseD"
        app:layout_constraintVertical_bias="0.814"
        tools:text="@string/historyT" />

    <Button
        android:id="@+id/Science"
        android:layout_width="154sp"
        android:layout_height="76sp"
        android:background="@drawable/shape"
        android:text="@string/scienceT"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/Movies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseD"
        app:layout_constraintVertical_bias="0.874"
        tools:text="@string/scienceT" />

    <Button
        android:id="@+id/Movies"
        android:layout_width="154sp"
        android:layout_height="76sp"
        android:background="@drawable/shape"
        android:text="@string/movie"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/Arts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseD"
        app:layout_constraintVertical_bias="0.904"
        tools:text="@string/movie" />

    <Button
        android:id="@+id/Arts"
        android:layout_width="154sp"
        android:layout_height="76sp"
        android:background="@drawable/shape"
        android:text="@string/arts"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseD"
        app:layout_constraintVertical_bias="0.919"
        tools:text="@string/arts" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="@+id/geography"
        app:layout_constraintEnd_toStartOf="@+id/geography"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/geography"
        app:srcCompat="@drawable/earth" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="@+id/History"
        app:layout_constraintEnd_toStartOf="@+id/History"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/History"
        app:srcCompat="@drawable/greek" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="@+id/Science"
        app:layout_constraintEnd_toStartOf="@+id/Science"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Science"
        app:srcCompat="@drawable/test_tube" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="@+id/Movies"
        app:layout_constraintEnd_toStartOf="@+id/Movies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Movies"
        app:srcCompat="@drawable/popcorn" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="@+id/Arts"
        app:layout_constraintEnd_toStartOf="@+id/Arts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Arts"
        app:srcCompat="@drawable/painting" />

</androidx.constraintlayout.widget.ConstraintLayout>